<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_marginBottom="@dimen/activity_horizontal_margin"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewHeadingWT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
     >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <TextView
                android:id="@+id/trackerWeight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60KG"
                android:textColor="@color/text_color"
                android:textSize="@dimen/big_text_size"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Current weight"
                android:textSize="@dimen/medium_text_size"
                android:textColor="@color/text_color"
                />
        </LinearLayout>


    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/WeightSummary"
        app:layout_constraintStart_toStartOf="@id/cardViewHeadingWT"
        app:layout_constraintTop_toBottomOf="@id/cardViewHeadingWT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:text="Weight Summary:"
        android:textColor="#000000"
        android:textSize="@dimen/medium_text_size"/>

    <ListView
        android:id="@+id/listView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@id/WeightSummary"
        app:layout_constraintTop_toBottomOf="@id/WeightSummary"
        android:layout_margin="@dimen/activity_horizontal_margin">
    </ListView>
</android.support.constraint.ConstraintLayout>